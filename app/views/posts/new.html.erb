<%= form_with model: @post do |form| %>
  <div class="input">
    <%= form.label :title %>
    <%= form.text_field :title %>
    <% @post.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>
  <div class="input">
    <%= form.label :body %>
    <%= form.text_field :body %>
    <% @post.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div>
  <%= form.submit %>
<% end %>
